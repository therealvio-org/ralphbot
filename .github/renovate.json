{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":dependencyDashboard"],
  "ignorePaths": ["src/Dockerfile", "ops/Dockerfile"],
  "schedule": ["after 7am and before 7pm every weekday"],
  "automergeSchedule": ["after 7am and before 7pm every weekday"],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 7am on the first day of the month"],
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true,
    "automergeStrategy": "squash"
  },
  "platformAutomerge": true,
  "automergeStrategy": "squash",
  "automergeType": "pr",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "matchFiles": [".github/workflows/"],
      "automerge": true
    },
    {
      "matchManagers": ["gomod"],
      "automergeStrategy": "squash"
    },
    {
      "groupName": "golang",
      "matchManagers": ["gomod"],
      "matchPackageNames": ["go"],
      "automergeStrategy": "squash"
    },
    {
      "groupName": "linting",
      "matchPackageNames": [
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint",
        "eslint-plugin-import",
        "prettier"
      ],
      "automerge": true
    },
    {
      "groupName": "jest",
      "matchPackageNames": ["jest", "ts-jest", "@types/jest"],
      "automerge": true
    },
    {
      "groupName": "nodejs",
      "allowedVersions": "^18.0.0",
      "matchPackageNames": ["node", "@types/node"],
      "automerge": true
    },
    {
      "groupName": "aws-cdk",
      "matchPackageNames": ["constructs", "aws-cdk", "aws-cdk-lib"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
