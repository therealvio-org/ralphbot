{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":dependencyDashboard"],
  "timezone": "Australia/Melbourne",
  "schedule": [
    "after 8pm every weekday",
    "before 8am every weekday",
    "every weekend"
  ],
  "automergeSchedule": [
    "after 8pm every weekday",
    "before 8am every weekday",
    "every weekend"
  ],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 7am on the first day of the month"],
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true,
    "automergeStrategy": "squash"
  },
  "platformAutomerge": true,
  "automergeStrategy": "squash",
  "automergeType": "pr",
  "automerge": true,
  "packageRules": [
    { "matchManagers": ["asdf"] },
    { "matchManagers": ["github-actions"] },
    { "matchManagers": ["gomod"] },
    {
      "matchManagers": ["npm"],
      "excludeDepPatterns": ["node"],
      "matchUpdateTypes": ["minor", "patch", "rollback", "bump"]
    },
    {
      "groupName": "aws-cdk",
      "allowedVersions": "^2.0.0",
      "matchPackageNames": ["aws-cdk", "aws-cdk-lib"]
    },
    {
      "groupName": "golang",
      "matchDatasources": ["golang-version"],
      "matchManagers": ["asdf", "dockerfile", "gomod"],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "jest",
      "matchPackageNames": ["jest", "ts-jest", "@types/jest"]
    },
    {
      "groupName": "linting",
      "matchPackageNames": [
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint",
        "eslint-plugin-import",
        "prettier"
      ]
    },
    {
      "groupName": "nodejs",
      "allowedVersions": "^18.0.0",
      "matchManagers": ["npm"],
      "matchPackageNames": ["node", "@types/node"]
    },
    {
      "groupName": "nodejs",
      "allowedVersions": "^18.0.0",
      "matchDatasources": ["node-version"],
      "matchManagers": ["asdf"],
      "matchPackageNames": ["node"]
    },
    {
      "groupName": "nodejs",
      "automerge": false,
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["node"],
      "matchUpdateTypes": ["minor"]
    },
    {
      "groupName": "pnpm",
      "matchManagers": ["regex", "asdf", "npm"],
      "matchPackageNames": ["pnpm", "pnpm/pnpm"]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.github/(?:workflows|actions)/.+\\.ya?ml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\\s]+?)(?: (?:lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[a-z-0-9]+?))?\\s+[A-Za-z0-9_]+?_VERSION\\s*:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    }
  ]
}
