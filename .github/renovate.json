{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":dependencyDashboard"],
  "timezone": "Australia/Melbourne",
  "schedule": [
    "after 8pm every weekday",
    "before 8am every weekday",
    "every weekend"
  ],
  "automergeSchedule": [
    "after 8pm every weekday",
    "before 8am every weekday",
    "every weekend"
  ],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 7am on the first day of the month"],
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": false,
    "automergeStrategy": "squash"
  },
  "platformAutomerge": true,
  "automergeStrategy": "squash",
  "automergeType": "pr",
  "automerge": true,
  "packageRules": [
    { "matchManagers": ["asdf"] },
    { "matchManagers": ["github-actions"] },
    { "matchManagers": ["gomod"] },
    {
      "matchManagers": ["npm"],
      "excludeDepPatterns": ["node"],
      "matchUpdateTypes": ["minor", "patch", "rollback", "bump"]
    },
    {
      "groupName": "aws-cdk",
      "allowedVersions": "^2.0.0",
      "matchDepNames": ["aws-cdk", "aws-cdk-lib"]
    },
    {
      "groupName": "go",
      "groupSlug": "golang",
      "allowedVersions": "^1.17.0",
      "matchDatasources": ["golang-version"],
      "matchDepNames": ["go", "golang", "public.ecr.aws/docker/library/golang"],
      "matchManagers": ["asdf", "dockerfile", "gomod"]
    },
    {
      "groupName": "jest",
      "matchDepNames": ["jest", "ts-jest", "@types/jest"]
    },
    {
      "groupName": "linting",
      "matchDepNames": [
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint",
        "eslint-plugin-import",
        "prettier"
      ]
    },
    {
      "groupName": "nodejs",
      "allowedVersions": "^18.0.0",
      "matchManagers": ["npm", "asdf"],
      "matchDepNames": ["node", "@types/node"]
    },
    {
      "groupName": "pnpm",
      "matchManagers": ["asdf", "npm"],
      "matchDepNames": ["pnpm", "pnpm/pnpm"]
    }
  ]
}
